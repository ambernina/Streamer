<div class="container">
  <div class="row">
    <div class="darkGreen z-depth-5 col s9">
      <h4 id="title"> {{title}} </h4>

    </div>
  </div>


  <div class="row">

    <!-- left hand side -->
    <div class="col s4">

      <div class="darkGreen z-depth-5 row">
        <p id="poster"> Movie Poster will Go Here </p>
        <img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2{{poster}}" data-id={{api_id}} class="carouselImage">
      </div>

      <div class="darkGreen z-depth-5 row">

        <button class="btn-floating btn-large waves-effect waves-light btn" id="add-watchlist">Add To Future
          Watchlist</button>
        <button class="btn-floating btn-large waves-effect waves-light btn" id="mark-start">Add To Started
          Watchlist</button>
        <button class="btn-floating btn-large waves-effect waves-light btn" id="mark-complete">Add To
          Completed
          Watchlist</button>


      </div>
    </div>

    <!-- right hand side -->
    <div class="col s7 offset-s1">

      <div class="darkGreen z-depth-5 row" id="selected-info">
        <p id="summary"> Movie Summary Will Go Here </p>
        <p>{{summary}}</p>
        <p id="rating">Rating</p>
        <p>This one got a {{rating}} out of 10!</p>

      </div>

    </div>